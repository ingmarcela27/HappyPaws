<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="15dp"
    app:cardElevation="@dimen/cardCornerRadius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/ivItemProduct"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/catchow" />

        <TextView
            android:id="@+id/tvNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cat chow"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReferenceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alimento para gatos"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="$ 109.000 COP"
                android:textSize="24sp"
                android:textStyle="bold" />

                   </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>